                  height (32/$rem)
                  background-image url('http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/new-5e42f2db1f.png')
                  background-size 100%
              &:nth-of-type(1)
                margin-right (8/$rem)
              &:nth-of-type(3)
                margin-right (8/$rem)  
