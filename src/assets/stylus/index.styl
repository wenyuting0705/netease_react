@import './index.styl'
body,html 
  background-color #f4f4f4
  height 100%
  width 100%
  overflow hidden
// html
  font-size 50px
  // home页
  .home
    position relative
    .header_header_con  //home页头部容器
      width 100%
      background-color #ffffff
      margin-bottom (8/$rem)
      position fixed
      top 0
      left 0
      z-index 99
      .home_header
        padding (16/$rem 30/$rem)
        font-size 0
        display flex
        img 
          height (40/$rem)
          vertical-align middle
          padding-top (16/$rem)
          margin-right (50/$rem)
      .home_nav        //home也顶部横向可滚动导航
        width 100%
        overflow hidden
        background-color #ffffff
        .home_nav_list
          padding 0 (30/$rem)
          height (50/$rem)
          width 15rem
          li
            float left
            height (60/$rem)
            margin-left (40/$rem)
            font-size (28/$rem)
            padding 0 (17/$rem)
            line-height (60/$rem)
            color #333
            &.active
              border-bottom (4/$rem) solid #b4282d
              color #b4282d
          li:first-of-type
            margin-left 0
    .home_main    //home页主体部分
      margin-top (160/$rem)
      margin-bottom (98/$rem)
      overflow hidden
      .show_container   //home主页主轮播图
        background-color #ffffff
        margin-bottom (15/$rem)
        .swiper-container
          width 100%
          height 100%
          .swiper-wrapper
            width 100%
            height 100%
            .swiper-slide
              display flex
              justify-content center
              align-items flex-start
              flex-wrap wrap
              img 
                width 100%
          .swiper-pagination
            .swiper-pagination-bullet
              display inline-block
              width 0.4rem
              height 0.04rem
              border-radius 0
              background #fff
              opacity 0.4
            .swiper-pagination-bullet-active
              background #fff
              opacity 1
        .show_tips
          width 100%
          height 0.72rem
          padding 0 0.4rem
          box-sizing border-box
          display flex
          >li
            float left 
            flex 1
            height 0.36rem
            margin 0.18rem 0
            display flex
            line-height 0.36rem
            .tip_icon
              width 0.32rem
              background-size 100%
              background-repeat no-repeat
              vertical-align middle
              margin-top 0.05rem
            .tip_text
              font-size 0.24rem
              height 0.32rem
              width 100%
              margin-left 0.1rem
      .brand_provide   //主页品牌制造商提供部分
        width 100%
        background-color #ffffff
        margin-bottom (15/$rem)
        >header
          height 1.1rem
          font-size 0.35rem
          display flex
          align-items center
          color #333
          justify-content center
          img 
            width 0.3rem
            height 0.3rem
            margin-left 0.1rem
        .brand_content
          ul
            overflow hidden
            margin 0 0.2rem
            li
              float left
              position relative
              width (350/$rem)
              height (236/$rem)
              font-size (28/$rem)
              background-color #f4f4f4
              margin-bottom (8/$rem)
