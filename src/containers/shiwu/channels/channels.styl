@import "../../../../node_modules/stylus-px2rem"
  html-font-size = 375/12px
@import '../../../assets/stylus/mixins.styl'
.shiwu_channels
    width 100%
    height 286px
    padding 32px 30px 28px
    margin-bottom 20px
    background-color #ffffff
    box-sizing border-box
    .swiper-container
      width 100%
      height 226px
      font-size 0
      .swiper-wrapper
        font-size 0
        .swiper-slide
          width 164px
          height 210px
          margin-right 24px
          display flex
          flex-direction column
          // justify-content center
          position relative
          font-size 0
          img
            width 100%
            height 164px
            margin-bottom 22px
            border-radius 5px
          .topNum
            position absolute
            top 0
            right 0
            color #ffffff
            width 116px
            height 32px
            font-size 24px
            border-radius 5px
            background-image url('http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/rbGradient-049c62dfb5.png')
            background-size 100%
            line-height 32px
            padding-right 5px
          .channel_title
            color #333333
            font-size 24px
            width 190px
            height 24px
            line-height 1
            text-align center