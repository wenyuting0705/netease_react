@import "../../../../node_modules/stylus-px2rem"
  html-font-size = 375/12px
@import '../../../assets/stylus/mixins.styl'
  .recommends
    width 690px
    padding 0 30px 10px
    background-color #ffffff
    margin-bottom 20px
    .rcmd_container
      width 100%
      >header
        width 100%
        height 120px
        text-align center 
        line-height 120px
        font-size 32px
      .mainPosItem
        width 100%
        height 572px
        margin-bottom 30px
        border 1px solid #d9d9d9
        border-radius 8px
        color #333333
        .img_container
          width 100%
          height 386px
          border-radius 8px 8px 0 0
          background-size 100%
          position relative
          .topic_tag
            width 130px
            height 36px
            position absolute
            top 20px
            left 20px
            box-sizing border-box
            padding 0 16px
            border 1px solid #d9d9d9
            background-color rgba(255,255,255,.9)
            font-size 24px
            line-height 36px
            text-align center
            border-radius 36px
        .topicInfo
          width 648px
          height 95px
          padding 24px 20px 67px
          .info_title
            height 43px
            margin-bottom 19px
            display flex
            justify-content space-between
            align-items center
            font-size 34px
            >.title
              display inline-block
              width 300px
              margin-right 30px
              overflow hidden
              white-space nowrap
              text-overflow ellipsis
          .info_desc
            height 33px
            color #7f7f7f
            font-size 24px
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
      .minorPosItem
        width 688px
        height 272px
        border 1px solid #d9d9d9
        border-radius 8px
        margin-bottom 30px
        color #333333
        display flex
        >.topicInfo
          width 358px
          padding 0 30px 0 20px
          display flex
          flex-direction column
          justify-content center
          align-items center
          .author_container
            width 100%
            height 48px
            margin-bottom 25px
            display flex
            .avatar
              width 46px
              height 46px
              margin-right 4px
              background-size 100%
              vertical-align middle
              border-radius:50%
            .nickName
              width 160px
              height 46px
              font-size 24px
              color #333333
              line-height 46px
          >.title
            width 100% 
            height 38px
            margin-bottom 14px
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
            font-size 32px
          >.subTitle
            width 100% 
            height 67px
            color #7f7f7f
            font-size 24px
            line-height 1.5
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
        .minorPic
          width 280px
          height 272px
          border-radius 8px
          background-size 100%
          position relative
          .topic_tag
            height 36px
            position absolute
            top 20px
            left 20px
            box-sizing border-box
            padding 0 16px
            border 1px solid #d9d9d9
            background-color rgba(255,255,255,.9)
            font-size 24px
            line-height 36px
            text-align center
            border-radius 36px