@import "../../../../node_modules/stylus-px2rem"
  html-font-size = 375/12px
@import '../../../assets/stylus/mixins.styl'
  .tenFifteen
    width 690px
    height 531px
    margin-bottom 20px
    padding 0 30px 40px 30px
    background #ffffff
    >header
      width 100%
      height 120px
      text-align center 
      line-height 120px
      font-size 32px
    .tenFifteen_swiper
      .swiper-container
        .swiper-wrapper
          .swiper-slide
            width 500px
            height 294px
            padding 38px 40px 79px
            margin-right 30px
            background-image url('http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/tenFifteen-2a1d0ea11b.png')
            background-size 100%
            position relative
            &:last-child
              width 560px
              height 364px
              border 10px solid #e6e6e6
              padding 0
              margin 0
              .look_more
                width 192px
                height 38px
                position absolute
                top 0
                bottom 0
                left 0
                right 0
                margin auto
                font-size 26px
                color #7f7f7f
                span
                  width 30px
                  height  30px
                  background-image url('http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/circle-right-arrow-3d59025cb6.png')
                  display inline-block
                  background-size 100%
            .tf_subtitle
              font-size 24px
              color #7f7f7f
              line-height 30px
              transform scale(.8)
              text-align center
              margin-bottom 40px
            .tf_title
              color #333333
              font-size 32px
              font-weight bold
              line-height 48px
              text-align center
              margin-bottom 14px
            .tf_desc
              color #333333
              font-size 24px
              margin-top 4px
              line-height 36px
              text-align center
            .joinInfo
              height 48px
              width 500px
              text-align center 
              position absolute
              bottom 79px
              .inner
                overflow hidden
                height 48px
                width 360px
                display flex
                margin-left 80px
                .avatars
                  width 176px
                  margin-right 16px
                  height 48px
                  overflow hidden
                  .avatar
                    width 46px
                    height 46px
                    border-radius 50%
                    margin-left -5px
                    float left 
                    &:first-of-type
                      margin-left 0
                    >img 
                      width 100% 
                      display block
                      border-radius 50%
                    &:last-child
                      background #d9d9d9
                      display flex
                      align-items center
                      justify-content center
                      span 
                        width 6px
                        height 6px
                        background #ffffff
                        margin-right 4px
                .join
                  font-size 24px
                  color #7f7f7f
                  float left
                  height 48px
                  line-height 48px