@import "../../../../node_modules/stylus-px2rem"
  html-font-size = 375/12px
@import '../../../assets/stylus/mixins.styl'
.shiwu_More
  width 690px
  margin 0 30px
  header 
    width 100%
    height 140px
    font-size 26px
    line-height 120px
    text-align center
    color #333
    display flex
    align-items center
    &::before,&::after
      content ""
      height 1px
      width 264px
      background #d9d9d9
      display block
    div
      margin 0 24px
  .more_content
    width 100%
    .content_item
      width 100%
      height 498px
      box-sizing border-box
      margin-bottom 30px
      background #fff
      color #333
      padding 24px
      img 
        width 100%
        height 360px
      .content_title
        width 100%
        padding 28px 0
        font-size 26px
        overflow hidden
        white-space nowrap
        text-overflow ellipsis