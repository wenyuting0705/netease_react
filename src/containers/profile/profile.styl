@import "../../../node_modules/stylus-px2rem"
  html-font-size = 375/12px
@import '../../assets/stylus/mixins.styl'
  .profile
    .profile_login
      width 100%
      height 700px
      .logo
        padding 160px 0
        height 90px
        text-align center
        img
          height 100%
      .btn_wrap
        width 670px
        height 290px
        padding 0 40px
        margin-bottom 205px
        .btn
          width 666px
          height 90px
          margin-bottom 32px
          border: 1px solid #b4282d;
          font-size 28px
          border-radius 4px
          vertical-align middle
          text-align center
          line-height 90px
          >span:first-of-type
            display inline-block
            width 40px
            height 40px
            margin-right 16px
            background-image url('./img/profile.png')
            background-size 100%
            vertical-align middle
        .phone_login
          background-color #b4282d
          color #ffffff
          .phone_icon
            background-position 0 -174px
        .email_login
          color  #b4282d
        .phone_regist
          color #333333
          width 100%
          font-size 28px
          text-align center
          .arrow
            display inline-block
            width 28px
            height 28px
            background-image url('http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/arrow-right3-c1ab37e88b.png')
            background-size 100%
            vertical-align middle
      .login_selector
        position absolute
        left 0
        bottom 80px
        width 100%
        height 40px
        text-align center 
        line-height 40px
        display flex
        justify-content center
        .login_item
          padding 0 40px
          font-size 28px
          color #7F7F7F
          border-right 1px solid #979797
          // width (100/$rem)
          &:last-of-type
            border-right 0
          span
            display inline-block
            width 40px
            height 40px
            // background-image url('./img/profile.png')
            // background-size 100%
            // background-position 0 -150px
            vertical-align middle
            margin-right 5px
            .iconfont
              font-size 38px