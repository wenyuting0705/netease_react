@import "../../../../node_modules/stylus-px2rem"
  html-font-size = 375/12px
@import '../../../assets/stylus/mixins.styl'
    .home_nav_item
      width 100%
      background-color #fff
      margin-bottom 20px
      .nav_item_title
        height 120px
        text-align center
        line-height 120px
        color #333
        font-size 30px
      .item_list
        overflow hidden
        >li
          float left
          width 50%
          height 587px
          box-sizing border-box
          padding 0 10px 33px 20px
          &:nth-of-type(2n)
            padding 0 20px 33px 10px
          .item_img
            width 345px
            height 414px
            font-size 0
            >img
              width 345px
              background #f4f4f4
            .item_info
              width 100%
              height 69px
              background-color #F1ECE2
              font-size 24px
              color #9F8A60
              line-height 69px
              padding-left 10px
              box-sizing border-box
              overflow hidden
              white-space nowrap
              text-overflow ellipsis
          .item_tips
            width 335px
            height 30px
            margin 20px 0 0 4px
            padding-left 10px
            >p
              width 48px
              height 20px
              padding 5px 16px
              background-color #f48f18
              color #ffffff
              font-size: 24px
              border-radius 3px
              vertical-align middle
          .item_name
            height 48px
            margin-top 10px
            padding 0 10px
            font-size 26px
            color #333
            overflow hidden
            white-space nowrap
            text-overflow ellipsis
            line-height 48px
            height 32px
            padding 0 10px
            font-size 30px
            color #b4282d
        .more
          height 414px
          display flex
          align-items center
          justify-content center
          flex-direction column
          background-color #f4f4f4
          .more_text
            font-size 32px
            color #333
            margin-bottom 60px
          .more_icon
            width 67px
            height 67px
            background-image url('http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/goodGridMore-233aaf669a.png')
            background-size 100%