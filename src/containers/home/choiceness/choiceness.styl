 @import "../../../../node_modules/stylus-px2rem"
  html-font-size = 375/12px
@import '../../../assets/stylus/mixins.styl'
  .choiceness
      width 100%
      height 563px
      margin-bottom 20px
      background-color #fff
      .choiceness_title
        height 110px
        display flex
        text-align center
        justify-content center
        line-height 110px
        font-size 30px
        color #333
        .title_icon
          width 30px
          height 30px
          background-image url('http://yanxuan-static.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/go2-3e511991d6.png')
          background-size 100%
          margin-top 38px
          margin-left 10px
      .choiceness_slide
        padding 0 30px 36px
        overflow hidden
        .swiper-container
          .swiper-wrapper
            width 575px
            margin-left 0
            .swiper-slide
            .inner_item
              width 575px !important
              height 417px
              margin-right 21px
              img
                width 100%
                height 322px
                border-radius 8px
                margin-bottom 16px
              .swiper_item_title
                font-size 28px
                height 40px
                display flex
                color #333
                .title_text
                  width 405px
                  white-space nowrap
                  overflow hidden
                  text-overflow ellipsis
                .item_title_price
                  margin-left 40px
                  color #b4282d
                  float right 
                  display flex
              .swiper_item_info
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
                font-size: 24px
                color: #7F7F7F;