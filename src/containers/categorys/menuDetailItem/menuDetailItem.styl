@import "../../../../node_modules/stylus-px2rem"
  html-font-size = 375/12px
@import '../../../assets/stylus/mixins.styl'
  .menu_detail
    width 527px
    height 1200px
    margin-left 162px
    padding 30px
    background-color #ffffff
    border-left 1px solid #e4e4e4
    .menu_img
      width 100%
      height 192px
      margin-bottom 32px
      background-size 100%
    .menu_list
      overflow hidden
      li 
        width 144px
        height 216px
        margin-right 34px
        float left 
        display flex
        flex-direction column
        &:nth-of-type(3n)
          margin-right 0
        img 
          width 144px  
        .name
          font-size 24px
          color #333333
          text-align center      